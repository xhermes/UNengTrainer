<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="说明文字说明文字说明文字说明文字说明文字说明文字"
        android:textColor="@color/grey99"
        android:textSize="@dimen/text_size_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_motor_speed_primary_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="左轮转速"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_content" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/left_speed"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/left_reduce_double"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_speed_reduce_double"
            android:background="@drawable/rectangle_primary_dark"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/left_reduce"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/ic_speed_reduce"
            android:background="@drawable/rectangle_primary_dark"/>

        <TextView
            android:id="@+id/left_speed_text"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0%"
            android:textSize="@dimen/text_size_big" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/left_increase"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_speed_increase"
            android:background="@drawable/rectangle_primary_dark"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/left_increase_double"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/ic_speed_increase_double"
            android:background="@drawable/rectangle_primary_dark"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_motor_speed_primary_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="右轮转速"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_content" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/right_speed"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/right_reduce_double"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_speed_reduce_double"
            android:background="@drawable/rectangle_primary_dark"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/right_reduce"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/ic_speed_reduce"
            android:background="@drawable/rectangle_primary_dark"/>

        <TextView
            android:id="@+id/right_speed_text"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0%"
            android:textSize="@dimen/text_size_big" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/right_increase"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_speed_increase"
            android:background="@drawable/rectangle_primary_dark"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/right_increase_double"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/ic_speed_increase_double"
            android:background="@drawable/rectangle_primary_dark"/>
    </LinearLayout>


</LinearLayout>
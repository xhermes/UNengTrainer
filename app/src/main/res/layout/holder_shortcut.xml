<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/more"
        android:layout_width="40dp"
        android:layout_centerVertical="true"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_more"/>

    <TextView
        android:id="@+id/name"
        style="@style/TextContentPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20m地滚球" />
    <!--<LinearLayout-->
        <!--android:id="@+id/time_layout"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginRight="30dp"-->
        <!--android:gravity="center"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:orientation="horizontal">-->

        <!--<TextView-->
            <!--android:id="@+id/time"-->
            <!--style="@style/TextSmallGrey99"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="2017/5/16 14:27" />-->
    <!--</LinearLayout>-->

    <TextView
        android:id="@+id/elevation_angle"
        style="@style/TextSmallGrey99"
        android:layout_width="100dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:text="    仰角：10" />

    <TextView
        android:id="@+id/swing_angle"
        style="@style/TextSmallGrey99"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="左轮速：50"
        android:layout_alignBaseline="@+id/elevation_angle"
        android:layout_toRightOf="@+id/elevation_angle"
        android:layout_toEndOf="@+id/elevation_angle" />

    <TextView
        android:id="@+id/left_speed"
        style="@style/TextSmallGrey99"
        android:layout_width="100dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/elevation_angle"
        android:text="    摆角：100" />

    <TextView
        android:id="@+id/right_speed"
        style="@style/TextSmallGrey99"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/left_speed"
        android:layout_toRightOf="@id/left_speed"
        android:text="右轮速：50" />

    <View
        style="@style/SeparateLine"
        android:layout_below="@id/left_speed"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
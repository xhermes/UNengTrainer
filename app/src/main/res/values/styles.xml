<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="TextSubTitlePrimary" >
        <item name="android:textSize">@dimen/text_size_sub_title</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextSubTitleGrey33" >
        <item name="android:textSize">@dimen/text_size_sub_title</item>
        <item name="android:textColor">@color/grey33</item>
    </style>

    <style name="TextSubTitleGrey66" >
        <item name="android:textSize">@dimen/text_size_sub_title</item>
        <item name="android:textColor">@color/grey66</item>
    </style>

    <style name="TextSubTitleGrey99" >
        <item name="android:textSize">@dimen/text_size_sub_title</item>
        <item name="android:textColor">@color/grey99</item>
    </style>

    <style name="TextSmallGrey99" >
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/grey99</item>
    </style>

    <style name="TextSmallGrey33" >
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/grey33</item>
    </style>

    <style name="TextTinyGrey99" >
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@color/grey99</item>
    </style>

    <style name="TextContentGrey99" >
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:textColor">@color/grey99</item>
    </style>

    <style name="TextContentGrey33" >
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:textColor">@color/grey33</item>
    </style>

    <style name="TextContentPrimary" >
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextMainControlNumber" >
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonPrimary" >
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_button_primary</item>
    </style>

    <!-- 分隔线 -->
    <style name="SeparateLine">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/greyDD</item>
    </style>

    <!-- 竖直分隔线 -->
    <style name="SeparateLineVertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1px</item>
        <item name="android:background">@color/greyDD</item>
    </style>

</resources>
